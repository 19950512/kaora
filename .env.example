# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# PostgreSQL connection string for Docker container
DATABASE_URL="postgresql://username:password@localhost:port/database?schema=public"

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================

# Next.js configuration
NEXTJS_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# JWT Secret (change in production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Session secret (change in production)
SESSION_SECRET="your-super-secret-session-key-change-in-production"

# =====================================================
# AUTHENTICATION CONFIGURATION
# =====================================================

# NextAuth configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# Google OAuth credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================

# SMTP Configuration for sending emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =====================================================
# CLOUDFLARE R2 STORAGE CONFIGURATION (Optional)
# =====================================================

# R2 Storage credentials (get from Cloudflare Dashboard)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="kaora-uploads"
R2_PUBLIC_URL="https://your-custom-domain.com"
